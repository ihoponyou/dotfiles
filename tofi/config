# Font to use, either a path to a font file or a name.
#
# If a path is given, tofi will startup much quicker, but any
# characters not in the chosen font will fail to render.
#
# Otherwise, fonts are interpreted in Pango format.
font = "/usr/share/fonts/OTF/MonaspaceNeon-Regular.otf"
font-size = 24

default-result-color = #aaaa
default-result-background = #0000

selection-color = #ffff
selection-background = #6666

num-results = 5
result-spacing = 25

width = 100%
height = 100%
background-color = #000c

# Width of the border outlines in pixels.
outline-width = 0
# Width of the border in pixels.
border-width = 0

# Padding between borders and text. Can be pixels or a percentage.
padding-top = 40%
padding-left = 40%

# Show a text cursor in the input field.
text-cursor = true
# Supported values: bar, block, underscore
text-cursor-style = block
